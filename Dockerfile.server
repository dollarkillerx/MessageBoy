FROM golang:1.21-alpine AS builder

WORKDIR /app

COPY go.mod go.sum ./
RUN go mod download

COPY . .
RUN CGO_ENABLED=0 GOOS=linux go build -ldflags "-s -w" -o /messageboy-server ./cmd/server

FROM alpine:latest

RUN apk --no-cache add ca-certificates tzdata
WORKDIR /app

COPY --from=builder /messageboy-server .
COPY configs/server.toml ./configs/

EXPOSE 8080

ENTRYPOINT ["./messageboy-server"]
CMD ["--config", "configs/server.toml"]
